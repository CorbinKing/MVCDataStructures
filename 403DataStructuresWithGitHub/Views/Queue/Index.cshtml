
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <title>Queue Index</title>
</head>
<body>
    <div>
        <ul>
            <li>
                <a href="@Url.Action("AddOne","Queue")"
                   class="w3-bar-item w3-button">Add One Item to Queue</a>
            </li>
            <li>
                <a href="@Url.Action("AddMany","Queue")"
                   class="w3-bar-item w3-button">Add Huge List of Items to Queue</a>
            </li>
            <li>
                <a href="@Url.Action("Display","Queue")"
                   class="w3-bar-item w3-button">Display Queue</a>
            </li>
            <li>
                <a href="@Url.Action("Delete","Queue")"
                   class="w3-bar-item w3-button">Delete from Queue</a>
            </li>
            <li>
                <a href="@Url.Action("Clear","Queue")"
                   class="w3-bar-item w3-button">Clear Queue</a>
            </li>
            <li>
                <a href="@Url.Action("Search","Queue")"
                   class="w3-bar-item w3-button">Search Queue</a>
            </li>
            <li>
                <a href="@Url.Action("Return","Queue")"
                   class="w3-bar-item w3-button">Return to Main Menu</a>
            </li>
        </ul>
    </div>
    <p>@ViewBag.QueueSearch</p>
    <p>@ViewBag.StopWatch</p>
    @if (ViewBag.MyQueue != null)
    {
        foreach (var sData in ViewBag.MyQueue)
        {
            <p>@sData</p>
        }
    }

</body>
</html>
