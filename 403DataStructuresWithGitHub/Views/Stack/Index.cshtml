
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stack Index</title>
</head>
<body>
    <div>
        <ul>
            <li>
                <a href="@Url.Action("AddOne","Stack")"
                   class="w3-bar-item w3-button">Add One Item to Stack</a>
            </li>
            <li>
                <a href="@Url.Action("AddMany","Stack")"
                   class="w3-bar-item w3-button">Add Huge List of Items to Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Display","Stack")"
                   class="w3-bar-item w3-button">Display Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Delete","Stack")"
                   class="w3-bar-item w3-button">Delete from Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Clear","Stack")"
                   class="w3-bar-item w3-button">Clear Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Search","Stack")"
                   class="w3-bar-item w3-button">Search Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Return","Stack")"
                   class="w3-bar-item w3-button">Return to Main Menu</a>
            </li>
        </ul>
    </div>
    <p>@ViewBag.StackSearch</p>
    <p>@ViewBag.StopWatch</p>
    @if (ViewBag.MyStack != null)
    {
        foreach (var sData in ViewBag.MyStack)
        {
            <p>@sData</p>
        }
    }

</body>
</html>
